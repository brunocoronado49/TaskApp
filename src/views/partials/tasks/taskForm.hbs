<div class="col-sm-4">
  <div class="card">
    <div class="card-header">
      <h3>Add a task</h3>
    </div>
    <div class="card-body">
      <form action="/task/add" method="post">
        <div class="form-group p-2">
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="Title"
            id="title"
          />
        </div>
        <div class="form-group p-2">
          <textarea
            name="description"
            cols="30"
            rows="8"
            class="form-control"
            id="desc"
            placeholder="Description"
          ></textarea>
        </div>
        <div class="form-group p-2">
          <button class="btn btn-success" type="submit">Add task</button>
        </div>
      </form>
    </div>
  </div>
</div>