<table>
    <thead>
        <tr>
            <th>No.</th>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td>{{ @index }}</td>
            <td>{{ title }}</td>
            <td>{{ description }}</td>
            <td>
               <a href="">Done</a>
               <a href="/edit/{{ _id }}">Update</a>
               <a href="/delete/{{ _id }}">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>