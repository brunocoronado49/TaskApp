<div class="col-sm-8">
  <div class="card">
    <div class="card-header">
      <h3>Tasks</h3>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each tasks}}
            <tr>
              <td>{{@index}}</td>
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td>
                {{#if done}}
                  <a href="/toggleDone/{{_id}}" class="btn btn-secondary">Undone</a>
                {{else}}
                  <a href="/toggleDone/{{_id}}" class="btn btn-success">Done</a>
                {{/if}}
                <a href="/edit/{{_id}}" class="btn btn-info">Update</a>
                <a href="/delete/{{_id}}" class="btn btn-danger">Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>