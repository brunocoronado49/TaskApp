<center>
  <div class="container p-5">
    <div class="col-sm-5">
      <center>
        <div class="card">
          <div class="card-header">
            <h3>Update task</h3>
          </div>
          <div class="card-body">
            <form action="/update/{{task._id}}" method="post">
              <div class="form-group p-2">
                <input
                  type="text"
                  name="title"
                  placeholder="Title"
                  class="form-control"
                  value="{{task.title}}"
                />
              </div>
              <div class="form-group p-2">
                <textarea
                  name="description"
                  cols="30"
                  class="form-control"
                  rows="8"
                >{{task.description}}</textarea>
              </div>
              <div class="form-group p-2">
                <button type="submit" class="btn btn-primary">Update</button>
              </div>
            </form>
          </div>
        </div>
      </center>
    </div>
  </div>
</center>